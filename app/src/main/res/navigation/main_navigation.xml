<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/main_navigation"
        app:popUpToInclusive="true"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_loginFragment_to_movieListFragment"
            app:destination="@id/movieListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list">

        <action
            android:id="@+id/action_movieListFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_movieListFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />

        <action
            android:id="@+id/action_movieListFragment_to_detailTvShowFragment"
            app:destination="@id/detailTvShowFragment" />

        <action
            android:id="@+id/action_movieListFragment_to_personDetailFragment"
            app:destination="@id/personDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />

        <action
            android:id="@+id/action_profileFragment_to_detailTvShowFragment"
            app:destination="@id/detailTvShowFragment" />

        <action
            android:id="@+id/action_profileFragment_to_userListDetailFragment"
            app:destination="@id/userListDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/userListDetailFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.UserListDetailFragment"
        android:label="fragment_user_list_detail"
        tools:layout="@layout/fragment_user_list_detail">

        <argument
            android:name="listId"
            app:argType="string" />
        <argument
            android:name="listName"
            app:argType="string" />

        <action
            android:id="@+id/action_userListDetailFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />

        <action
            android:id="@+id/action_userListDetailFragment_to_detailTvShowFragment"
            app:destination="@id/detailTvShowFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.DetailMovieFragment"
        android:label="fragment_detail_movie"
        tools:layout="@layout/fragment_detail_movie">
        <argument
            android:name="movieId"
            app:argType="integer" />

        <action
            android:id="@+id/action_detailMovieFragment_self"
            app:destination="@id/detailMovieFragment" />

        <action
            android:id="@+id/action_detailMovieFragment_to_fullCastFragment"
            app:destination="@id/fullCastFragment" />

        <action
            android:id="@+id/action_detailMovieFragment_to_personDetailFragment"
            app:destination="@id/personDetailFragment" />

        <action
            android:id="@+id/action_detailMovieFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailTvShowFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.DetailTvShowFragment"
        android:label="fragment_detail_tv_show"
        tools:layout="@layout/fragment_detail_tv_show">
        <argument
            android:name="tvId"
            app:argType="integer" />

        <action
            android:id="@+id/action_detailTvShowFragment_self"
            app:destination="@id/detailTvShowFragment" />

        <action
            android:id="@+id/action_detailTvShowFragment_to_personDetailFragment"
            app:destination="@id/personDetailFragment" />

        <action
            android:id="@+id/action_detailTvShowFragment_to_fullCastFragment"
            app:destination="@id/fullCastFragment" />

        <action
            android:id="@+id/action_detailTvShowFragment_to_seasonDetailFragment"
            app:destination="@id/seasonDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/fullCastFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.FullCastFragment"
        android:label="fragment_full_cast"
        tools:layout="@layout/fragment_full_cast">

        <argument
            android:name="movieId"
            app:argType="integer" />

        <argument
            android:name="mediaType"
            app:argType="string"
            android:defaultValue="movie" />

        <action
            android:id="@+id/action_fullCastFragment_to_personDetailFragment"
            app:destination="@id/personDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/personDetailFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.PersonDetailFragment"
        android:label="fragment_person_detail"
        tools:layout="@layout/fragment_person_detail">
        <argument
            android:name="personId"
            app:argType="integer" />

        <action
            android:id="@+id/action_personDetailFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />
    </fragment>

    <fragment
        android:id="@+id/seasonDetailFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.SeasonDetailFragment"
        android:label="fragment_season_detail"
        tools:layout="@layout/fragment_season_detail">

        <argument
            android:name="tvId"
            app:argType="integer" />
        <argument
            android:name="seasonNumber"
            app:argType="integer" />

        <action
            android:id="@+id/action_seasonDetailFragment_to_personDetailFragment"
            app:destination="@id/personDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.allmoviedatabase.movielibrary.view.fragment.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player">

        <argument
            android:name="videoUrl"
            app:argType="string" />
    </fragment>

</navigation>