<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.PersonDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/personImageView"
            android:layout_width="150dp"
            android:layout_height="225dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedCorners10dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/personNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/personImageView"
            app:layout_constraintTop_toTopOf="@+id/personImageView"
            tools:text="Tim Robbins" />

        <TextView
            android:id="@+id/biographyTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Biyografi"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintStart_toStartOf="@+id/personNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/personNameTextView" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="@+id/personNameTextView"
            app:layout_constraintStart_toStartOf="@+id/biographyTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/biographyTitleTextView">

            <TextView
                android:id="@+id/biographyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Timothy Francis Robbins, Amerikalı oyuncu, yönetmen, yapımcı, senarist, aktivist ve müzisyen. Esaretin Bedeli filmindeki Andy Dufresne rolüyle tanınır." />

        </ScrollView>
        <!-- Kişisel Bilgiler Kutusu -->
        <LinearLayout
            android:id="@+id/personalInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/info_box_background"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personImageView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kişisel Bilgi"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Bilinen İşi"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/knownForTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Oyunculuk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bilinen Filmleri"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/knownCreditsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="138" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cinsiyet"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Erkek" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Doğum Tarihi"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/birthdayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="16 Ekim 1958 (67 yaşında)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Doğum Yeri"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/birthPlaceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="West Covina, California, USA" />

        </LinearLayout>

        <TextView
            android:id="@+id/knownForMoviesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Bilinen Filmleri"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personalInfoLayout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/knownForRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/knownForMoviesTitle"
            tools:listitem="@layout/item_recommendation_movie" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>