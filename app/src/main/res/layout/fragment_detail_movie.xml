<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.fragment.DetailMovieFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/abuzittinImageView"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <View
            android:id="@+id/progressBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_background"
            app:layout_constraintBottom_toBottomOf="@+id/ratingProgressIndicator"
            app:layout_constraintTop_toTopOf="@+id/ratingProgressIndicator"
            app:layout_constraintEnd_toEndOf="@+id/ratingProgressIndicator"
            app:layout_constraintStart_toStartOf="@+id/ratingProgressIndicator" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/ratingProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="-20dp"
            android:elevation="10dp"
            app:indicatorSize="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/abuzittinImageView"
            app:layout_constraintStart_toStartOf="@+id/abuzittinImageView"
            app:trackColor="#40FFFFFF"
            app:trackThickness="4dp"
            app:indicatorColor="@color/rating_color" />

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:elevation="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/ratingProgressIndicator"
            app:layout_constraintEnd_toEndOf="@+id/ratingProgressIndicator"
            app:layout_constraintStart_toStartOf="@+id/ratingProgressIndicator"
            app:layout_constraintTop_toTopOf="@+id/ratingProgressIndicator"
            tools:text="85%" />

        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/abuzittinImageView"
            app:layout_constraintTop_toTopOf="@+id/abuzittinImageView">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                tools:text="The Shawshank Redemption" />

            <TextView
                android:id="@+id/shortDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="?android:textColorSecondary"
                tools:text="(1994)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="13sp"
                    tools:text="15/10/1994" />

                <TextView
                    android:id="@+id/lenghtTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    tools:text="2s 22dk" />
            </LinearLayout>

            <TextView
                android:id="@+id/genreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?android:textColorSecondary"
                android:textStyle="italic"
                android:textSize="13sp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Drama, Crime" />

            <TextView
                android:id="@+id/ageRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:background="@drawable/circle_background_semi_transparent"
                android:textStyle="bold"
                tools:text="13+" />
        </LinearLayout>

        <TextView
            android:id="@+id/tagLineTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textStyle="italic"
            android:textSize="14sp"
            android:alpha="0.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/abuzittinImageView"
            app:layout_constraintTop_toBottomOf="@+id/infoContainer"
            tools:text="Fear can hold you prisoner. Hope can set you free." />

        <TextView
            android:id="@+id/summaryLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/summary"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/abuzittinImageView"
            app:layout_constraintTop_toBottomOf="@+id/tagLineTextView" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:lineSpacingExtra="4dp"
            android:textSize="14sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/abuzittinImageView"
            app:layout_constraintTop_toBottomOf="@+id/summaryLabel"
            tools:text="Film özeti buraya gelecek... Çok uzun olsa bile 4 satırda kesilecek ve tıklandığında dialog açılacak. Posterin sağında kalacak." />

        <TextView
            android:id="@+id/readMoreHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Devamını Oku)"
            android:textSize="12sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/descriptionTextView"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/contentBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="abuzittinImageView,readMoreHint" />

        <TextView
            android:id="@+id/castLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Öne Çıkan Oyuncular"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentBarrier" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/castRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/castLabel"
            tools:listitem="@layout/item_cast_member" />

        <TextView
            android:id="@+id/videosHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Videolar &amp; Fragmanlar"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/castRecyclerView"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/videosRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/videosHeaderTextView"
            tools:visibility="visible"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_video" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/movieInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/info_box_background"
            app:layout_constraintTop_toBottomOf="@+id/videosRecyclerView">

            <TextView
                android:id="@+id/originalTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orijinal Başlık:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/originalTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/originalTitleLabel"
                app:layout_constraintBaseline_toBaselineOf="@+id/originalTitleLabel"
                tools:text="The Shawshank Redemption" />

            <TextView
                android:id="@+id/originalLanguageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Orijinal Dil:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/originalTitleLabel" />

            <TextView
                android:id="@+id/originalLanguageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/originalLanguageLabel"
                app:layout_constraintBaseline_toBaselineOf="@+id/originalLanguageLabel"
                tools:text="English" />

            <TextView
                android:id="@+id/budgetLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bütçe:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/originalLanguageLabel" />

            <TextView
                android:id="@+id/budgetTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/budgetLabel"
                app:layout_constraintBaseline_toBaselineOf="@+id/budgetLabel"
                tools:text="$25,000,000" />

            <TextView
                android:id="@+id/revenueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Kazanç:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/budgetLabel" />

            <TextView
                android:id="@+id/revenueTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/revenueLabel"
                app:layout_constraintBaseline_toBaselineOf="@+id/revenueLabel"
                tools:text="$28,000,000" />

            <View
                android:id="@+id/socialDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                android:alpha="0.5"
                app:layout_constraintTop_toBottomOf="@+id/revenueLabel"/>

            <LinearLayout
                android:id="@+id/socialMediaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/socialDivider">

                <ImageView
                    android:id="@+id/btnFacebook"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_facebook"
                    android:layout_marginEnd="24dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/btnInstagram"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_instagram"
                    android:layout_marginEnd="24dp"
                    app:tint="?attr/colorOnSurface"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/btnTwitter"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_twitter"
                    android:layout_marginEnd="24dp"
                    app:tint="?attr/colorOnSurface"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/btnHomepage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_link"
                    android:layout_marginEnd="24dp"
                    app:tint="?attr/colorOnSurface"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/btnImdb"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_imdb"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/recommendationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Ayrıca Önerilenler"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieInfoLayout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendationsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/recommendationLabel"
            tools:listitem="@layout/item_recommendation_movie" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interactionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/info_box_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/recommendationsRecyclerView">

            <CheckBox
                android:id="@+id/cbLike"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:button="@null"
                android:drawableStart="@drawable/selector_favorite_heart"
                android:stateListAnimator="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0 Beğeni"
                style="@style/TextTitleStyle"
                app:layout_constraintBottom_toBottomOf="@+id/cbLike"
                app:layout_constraintStart_toEndOf="@+id/cbLike"
                app:layout_constraintTop_toTopOf="@+id/cbLike" />

            <View
                android:id="@+id/dividerInteraction"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:background="#40FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvLikeCount"
                app:layout_constraintTop_toTopOf="parent"/>

            <CheckBox
                android:id="@+id/cbWatchList"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableStart="@drawable/selector_bookmark"
                android:drawablePadding="8dp"
                android:text="İzleme Listem"
                style="@style/TextDescriptionStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dividerInteraction"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWatchMovie"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:text="FİLMİ İZLE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/rating_color"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@+id/interactionLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>