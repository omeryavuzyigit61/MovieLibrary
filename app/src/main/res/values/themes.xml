<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieLibrary" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MovieLibrary" parent="Base.Theme.MovieLibrary" />

    <style name="SearchScreen">
        <item name="android:backgroundTint">@color/white
        </item>
        <item name="android:textColor">@color/black
        </item>
        <item name="drawableTint">@color/gray</item>
    </style>

    <style name="BackgroundScreen">
        <item name="android:background">@color/background_color
        </item>
    </style>

    <style name="BackgroundScreen2">
        <item name="android:backgroundTint">@color/background_color</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescriptionStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedCorners10dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="MyCustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="shapeAppearanceOverlay">@style/MyChipShape</item>
    </style>

    <style name="MyChipShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>